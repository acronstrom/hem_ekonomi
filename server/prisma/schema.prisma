generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String            @id @default(cuid())
  email        String            @unique
  password     String
  name         String?
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt
  expenses     MonthlyExpense[]
  lineItems    MonthlyLineItem[]
  categories   UserCategory[]
  income       MonthlyIncome[]
  budgets      MonthlyBudget[]
  cardSections UserCardSection[]
}

model UserCardSection {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  sectionName String
  createdAt DateTime @default(now())

  @@unique([userId, sectionName])
  @@index([userId])
}

model MonthlyIncome {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  month     Int
  year      Int
  source    String
  member    String?  // Family member name (e.g. "Andreas", "Anna") â€“ optional
  amount    Decimal  @db.Decimal(12, 2)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, year, month])
}

model MonthlyBudget {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  month     Int
  year      Int
  amount    Decimal  @db.Decimal(12, 2)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, month, year])
  @@index([userId, year, month])
}

model UserCategory {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name      String
  createdAt DateTime @default(now())

  @@unique([userId, name])
  @@index([userId])
}

model MonthlyLineItem {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  month     Int
  year      Int
  section   String
  lineName  String
  category  String?
  member    String?  // Who paid / which card (e.g. "Andreas", "Anna")
  amount    Decimal  @db.Decimal(12, 2)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, year, month])
}

model MonthlyExpense {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  month       Int
  year        Int
  category    String
  amount      Decimal  @db.Decimal(12, 2)
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, month, year, category])
  @@index([userId, year, month])
}
